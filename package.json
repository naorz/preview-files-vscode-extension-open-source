{
	"name": "previewfiles",
	"displayName": "PreviewFiles",
	"description": "",
	"icon": "icon.png",
	"version": "1.0.2",
	"publisher": "MaayanAndEden",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other",
		"Themes"
	],
	"activationEvents": [
		"onCommand:extension.previewHover"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.previewHover",
				"title": "Preview Hover"
			},
			{
				"command": "previewHover.newTabCommand",
				"title": "newTabCommand"
			},
			{
				"command": "previewHover.cssFileEditorCommand",
				"title": "cssFileEditorCommand"
			},
			{
				"command": "previewHover.textFileEditorCommand",
				"title": "textFileEditorCommand"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"old-test": "node ./out/test/runTest.js",
		"test": "npx jest --watchAll",
		"test:coverage": "npx jest --coverage"
	},
	"devDependencies": {
		"@angular/core": "9.0.7",
		"@types/glob": "^7.1.1",
		"@types/jest": "^26.0.4",
		"@types/node": "^12.11.7",
		"@types/react": "16.8.24",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"angular": "1.8.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"jest": "^26.1.0",
		"mocha": "^7.0.1",
		"react": "16.13.1",
		"ts-jest": "^26.1.2",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"jest": {
		"coverageReporters": [
			"text",
			"text-summary",
			"json-summary",
			"html"
		],
		"coverageDirectory": "./coverage",
		"roots": [
			"<rootDir>/src"
		],
		"testPathIgnorePatterns": [
			"<rootDir>/src/test"
		],
		"watchPathIgnorePatterns": [
			"<rootDir>/node_modules"
		],
		"collectCoverageFrom": [
			"src/**/*.{ts,tsx,js}",
			"!src/**/*.spec.{js,jsx}",
			"!src/test/**/*.spec.{js,jsx}",
			"!src/test"
		],
		"transform": {
			".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "(/_tests_/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		]
	},
	"dependencies": {
		"@types/mocha": "^8.0.0"
	}
}